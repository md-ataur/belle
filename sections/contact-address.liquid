<ul class="list-unstyled">
  {% if section.settings.address != blank %}
    <li>
      <i class="fa fa-home"></i>
      <span>{{ section.settings.address }}</span>
    </li>
  {% endif %}

  {% if section.settings.phone != blank %}
    <li>
      <i class="fa fa-phone"></i>
      <span>Phone: {{ section.settings.phone }}</span>
    </li>
  {% endif %}

  {% if section.settings.fax != blank %}
    <li>
      <i class="fa fa-fax"></i>
      <span>Fax: {{ section.settings.fax }}</span>
    </li>
  {% endif %}

  {% if section.settings.email != blank %}
    <li>
      <i class="fa fa-envelope-o"></i>
      <span>Email: {{ section.settings.email }}</span>
    </li>
  {% endif %}
</ul>


{% schema %}
{
  "name": "Contact Address",
  "settings": [
    {
      "type": "text",
      "id": "address",
      "label": "Address"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone"
    },
    {
      "type": "text",
      "id": "fax",
      "label": "Fax"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email"
    }
  ]
}
{% endschema %}